<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_product_form_company_discount" model="ir.ui.view">
    <field name="name">product.template.form.company.discount</field>
    <field name="model">product.template</field>
    <field name="inherit_id" ref="product.product_template_form_view"/>
    <field name="arch" type="xml">
      <xpath expr="//group[@name='sales']" position="after">
        <group string="Company Discount">
          <field name="x_company_discount_percentage" nolabel="0"/>
        </group>
      </xpath>
    </field>
  </record>
</odoo>