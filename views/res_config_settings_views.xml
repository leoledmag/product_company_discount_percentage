<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_res_config_settings_discount" model="ir.ui.view">
    <field name="name">res.config.settings.view.form.company.discount</field>
    <field name="model">res.config.settings</field>
    <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
    <field name="arch" type="xml">
      <xpath expr="//div[@id='sales_default_section']" position="after">
        <div class="app_settings_block" string="Company Discount">
          <h2>Company Discount</h2>
          <div class="row mt16 o_settings_container">
            <div class="col-12 col-lg-6 o_setting_box">
              <div class="o_setting_left_pane">
                <field name="company_discount_base_field"/>
              </div>
              <div class="o_setting_right_pane">
                <label for="company_discount_base_field"/>
                <div class="text-muted">
                  Choose the product price field used as base for generated discount pricelist items.
                </div>
              </div>
            </div>
          </div>
        </div>
      </xpath>
    </field>
  </record>
</odoo>